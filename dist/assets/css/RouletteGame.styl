.unc-roulette-game
	position  relative
	
	ul
		padding 0
		list-style none
		
		li
			cursor pointer
			
			&.correct
				color green
			&.error
				color red
				
	.unc-roulette-base
		background-repeat no-repeat
		background-size contain
		height 520px
		text-align center
		position relative
		width 350px
	
		.unc-roulette
			background-size contain
			border-radius 50%
			display inline-block
			height 300px
			margin-top 23px
			transition-duration 1s
			transition-property all
			transition-timing-function cubic-bezier(0, 0, 0.43, 0.94)
			width 300px
		
		.unc-roulette-pin
			background-repeat no-repeat
			background-size contain
			height 70px
			left 0
			margin 0 auto
			position absolute
			right 0
			top 0
			width 50px